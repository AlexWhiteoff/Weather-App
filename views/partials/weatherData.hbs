<div class="info-block text-center">
    <div class="city">
        <h1 class="display-6 text-muted">Weather in {{weather.name}}, {{weather.sys.country}}</h1>
    </div>
    <div class="p-3 my-3 d-flex justify-content-center align-items-center"></div>
        <img src="{{weather.icon}}" alt="Weather image" class="bg-transparent border-0" width="80" height="80" />
        <div class="lead mt-2 ms-2 fs-4"><b>{{weather.main.temp}}&deg;C</b></div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 mb-3">
            <div class="border-start border-4 border-success p-2 d-flex justify-content-between align-items-center">
                <span class="lead">Pressure:</span>
                <span class="lead ms-4">{{weather.main.pressure}}hPa</span>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <div class="border-end border-4 border-success p-2 d-flex justify-content-between align-items-center">
                <span class="lead">Visibility:</span>
                <span class="lead ms-4">{{weather.visibility}}m</span>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <div class="border-start border-4 border-success border-opacity-75 p-2 d-flex justify-content-between align-items-center">
                <span class="lead">Humidity:</span>
                <span class="lead ms-4">{{weather.main.humidity}}%</span>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <div class="border-end border-4 border-success border-opacity-75 p-2 d-flex justify-content-between align-items-center">
                <span class="lead">Wind speed:</span>
                <span class="lead ms-4">{{weather.wind.speed}}m/s</span>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <div class="border-start border-4 border-success border-opacity-50 p-2 d-flex justify-content-between align-items-center">
                <span class="lead">Temperature:</span>
                <span class="lead ms-4">{{weather.main.temp}}&deg;C</span>
            </div>
        </div>
        <div class="col-12 col-md-6 mb-3">
            <div class="border-end border-4 border-success border-opacity-50 p-2 d-flex justify-content-between align-items-center">
                <span class="lead">Feels like:</span>
                <span class="lead ms-4">{{weather.main.feels_like}}&deg;C</span>
            </div>
        </div>
    </div>
</div>
