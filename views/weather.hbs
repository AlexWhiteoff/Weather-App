{{> header}}

<main>
    <section class="border border-2 rounded container-xl p-5 mt-5">
        <div class="info-block">
            <div class="city">
                <h1 class="display-4 text-muted">Weather in
                    {{weather.name}},
                    {{weather.sys.country}}</h1>
            </div>
            <div class="p-3 w-25 my-5 d-flex">
                <img
                    src="{{weather.icon}}"
                    alt="Weather image"
                    class="bg-transparent border-0"
                    width="100"
                    height="100"
                />
                <div class="lead mt-4 ms-1 fs-2">
                    <b>{{weather.main.temp}}&deg;C</b>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="d-flex justify-content-between">
                <div class="d-flex flex-column gap-2 w-10">
                    <div
                        class="border-start border-4 border-success p-2 m-2 d-flex justify-content-between align-items-stretch"
                    >
                        <span class="lead">Pressure:</span>
                        <span class="lead ms-4">{{weather.main.pressure}}hPa</span>
                    </div>
                    <div
                        class="border-start border-4 border-success border-opacity-75 p-2 m-2 d-flex justify-content-between align-items-stretch"
                    >
                        <span class="lead">Humidity:</span>
                        <span class="lead ms-4">{{weather.main.humidity}}%</span>
                    </div>
                    <div
                        class="border-start border-4 border-success border-opacity-50 p-2 m-2 d-flex justify-content-between align-items-stretch"
                    >
                        <span class="lead">Temperature:</span>
                        <span class="lead ms-4">{{weather.main.temp}}&deg;C</span>
                    </div>
                </div>
                <div class="d-flex flex-column gap-2 w-10 text-end">
                    <div
                        class="border-end border-4 border-success p-2 m-2 d-flex justify-content-between align-items-stretch"
                    >
                        <span class="lead">Visibility:</span>
                        <span class="lead ms-4">{{weather.visibility}}m</span>
                    </div>
                    <div
                        class="border-end border-4 border-success border-opacity-75 p-2 m-2 d-flex justify-content-between align-items-stretch"
                    >
                        <span class="lead">Wind speed:</span>
                        <span class="lead ms-4">{{weather.wind.speed}}m/s</span>
                    </div>
                    <div
                        class="border-end border-4 border-success border-opacity-50 p-2 m-2 d-flex justify-content-between align-items-stretch"
                    >
                        <span class="lead">Feels like:</span>
                        <span class="lead ms-4">{{weather.main.feels_like}}&deg;C</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

{{> footer}}